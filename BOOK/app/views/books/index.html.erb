<% if flash[:notice] %>
<p><%= flash[:notice]%></p>
<% end %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <% if @book.present? %>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?'} %></td>
    </tr>
  </tbody>
  <% end %>
  <% end %>
</table>
<h2>New Book</h2>
<div>
  <%= form_with model:@book, local:true do |f| %>
  <%= render 'error', locals: { book: @book} %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

  <% end %>
</div>
